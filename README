# Download Android source with patches(local_manifests)
 Refer to http://source.android.com/source/downloading.html
 $ repo init -u https://android.googlesource.com/platform/manifest -b android-6.0.1_r55
 $ cd .repo
 $ git clone https://github.com/lucatib/local_manifests -b marshmallow
 $ repo sync

# Patch art build by using correct prebuilt
http://review.cyanogenmod.org/#/c/120824/2/build/Android.common_build.mk

# Use oracle-jdk-bin-1.8
eselect java-vm set user 2

# mod wpa.te
#allow wpa self:netlink_generic_socket create_socket_perms;

allow wpa self:socket create_socket_perms;
allow wpa proc_net:file write;

# Build for RaspberryPi 3
 See https://github.com/peyo-hd/device_brcm_rpi3
